<%- include("../partials/header") %>
<%- include("../partials/navbar") %>
<%- include("../partials/flash") %>

<div class="container">
	<h1 class="display-4 text-center mb-3">Update <%= planet.name %></h1>

	<form action="/planets/<%= planet._id %>?_method=PUT" method="POST">
		<div class="form-group">
			<label for="planetName">Name</label>
			<input id="planetName" class="form-control" type="text" name="planet[name]" value="<%= planet.name %>" required>
		</div>

		<div class="row">
			<div class="col-12 col-sm-6 col-md-4">
				<div class="form-group">
					<label for="planetColour">Colour</label>
					<input id="planetColour" class="form-control" type="color" name="planet[colour]" value="<%= planet.colour %>" required>
				</div>		
			</div>

			<div class="col-12 col-sm-6 col-md-4">
				<div class="form-group">
					<label for="planetDiameter">Diameter (km)</label>
					<input id="planetDiameter" class="form-control" type="number" name="planet[diameter]" value="<%= planet.diameter %>" step="100" min="100" required>
				</div>	
			</div>

			<div class="col-12 col-sm-6 col-md-4">
				<div class="form-group">
					<label for="planetMoonCount">Moon count</label>
					<input id="planetMoonCount" class="form-control" type="number" name="planet[moonCount]" value="<%= planet.moonCount %>" step="1" min="0" required>
				</div>
			</div>
		</div>
		
		<div class="form-group">
			<label for="planetDescription">Description</label>
			<textarea id="planetDescription" class="form-control" name="planet[description]" rows="4" required><%= planet.description %></textarea>
		</div>

		<div class="form-group">
			<label for="planetStarName">Star Name</label>
			<input id="planetStarName" class="form-control" type="text" name="planet[starName]" value="<%= planet.starName %>" required>
		</div>

		<div class="form-group">
			<label for="planetDistanceFromStar">Distance from star (AU)</label>
			<input id="planetDistanceFromStar" class="form-control" name="planet[distanceFromStar]" type="number" value="<%= planet.distanceFromStar %>" step="0.1" min="0.1" required>
		</div>

		<button class="btn btn-success" type="submit">Update</button>
		<a class="btn btn-danger" href="/planets/<%= planet._id %>">Cancel</a>
	</form>
</div>

<%- include("../partials/footer") %>