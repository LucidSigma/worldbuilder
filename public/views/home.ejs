<%- include("./partials/header") %>
<%- include("./partials/flash") %>

<div class="container p-5 rounded my-3">
	<div class="jumbotron jumbotron-fluid text-center rounded mt-4 px-4">
		<h1 class="display-4"><i class="fas fa-globe-americas d-none d-sm-inline"></i> Welcome to WorldBuilder!</h1>
		<p class="lead">The best forum for creating and discussing fictional planets!</p>

		<hr class="my-4 mx-5">

		<a class="btn btn-primary btn-xl" href="/planets">View all planets</a>
	</div>

	<div id="homePageCarousel" class="carousel slide carousel-fade" data-ride="carousel">
		<ol class="carousel-indicators">
			<li data-target="#homePageCarousel" data-slide-to="0" class="active"></li>
			<li data-target="#homePageCarousel" data-slide-to="1"></li>
			<li data-target="#homePageCarousel" data-slide-to="2"></li>
			<li data-target="#homePageCarousel" data-slide-to="3"></li>
			<li data-target="#homePageCarousel" data-slide-to="4"></li>
		</ol>

		<div class="carousel-inner rounded mb-4">
			<div class="carousel-item active">
				<img class="d-block w-100" src="https://images.pexels.com/photos/314017/pexels-photo-314017.png?cs=srgb&dl=madebygimp-planets-space-supernova-314017.jpg&fm=jpg" alt="Orange planet with moon.">
			</div>

			<div class="carousel-item">
				<img class="d-block w-100" src="https://images.pexels.com/photos/411962/pexels-photo-411962.jpeg?cs=srgb&dl=outer-space-planet-space-stars-411962.jpg&fm=jpg" alt="Blue gas giant.">
			</div>

			<div class="carousel-item">
				<img class="d-block w-100" src="https://images.pexels.com/photos/3355451/pexels-photo-3355451.jpeg?cs=srgb&dl=space-concept-background-3355451.jpg&fm=jpg" alt="Rocky planet with galaxy background.">
			</div>

			<div class="carousel-item">
				<img class="d-block w-100" src="https://images.pexels.com/photos/518938/pexels-photo-518938.jpeg?cs=srgb&dl=cosmos-galaxies-planet-universe-518938.jpg&fm=jpg" alt="Planet near supernova.">
			</div>

			<div class="carousel-item">
				<img class="d-block w-100" src="https://images.pexels.com/photos/3691758/pexels-photo-3691758.jpeg?cs=srgb&dl=space-background-3691758.jpg&fm=jpg" alt="Lone blue planet with moon.">
			</div>
		</div>

		<a class="carousel-control-prev" href="#homePageCarousel" role="button" data-slide="prev">
			<span class="carousel-control-prev-icon" aria-hidden="true"></span>
			<span class="sr-only">Previous slide.</span>
		</a>

		<a class="carousel-control-next" href="#homePageCarousel" role="button" data-slide="next">
			<span class="carousel-control-next-icon" aria-hidden="true"></span>
			<span class="sr-only">Previous slide.</span>
		</a>
	</div>
</div>

<%- include("./partials/footer") %>